@model Reservas.Frontend.Models.OficinaViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class="card-header text-center bg-primary">
            <h5>Editar Oficina</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Edit" method="Post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden"/>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Nombre" class="form-control" placeholder=" Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Descripcion" class="form-control" placeholder=" Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Precio" class="form-control" placeholder=" Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <textarea asp-for="Ubicacion" class="form-control" placeholder=" Ubicación"></textarea>
                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="EdificioId" asp-items="Model.Edificios" class="form-control"></select>
                    <span asp-validation-for="EdificioId" class="text-danger"></span>
                </div>
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="oi oi-check"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="oi oi-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


